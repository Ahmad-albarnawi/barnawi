<%- include("../partials/header") %>

<div class="container">
	<h1 class="text-center">
		Edit a Campground of <%= campground.name %>
	</h1>
<form Action="/campgrounds/<%=campground._id%>/edit?_method=PUT" method="POST">
		
	<div class="form-group row">
		<div class="siz">
			
		<input type="text" class="form-control" value="<%= campground.name %>" name="campground[name]">
			<br>
		<input type="text" class="form-control" value="<%= campground.img %>" name="campground[img]">
			<br>
		<input type="text" class="form-control" value="<%= campground.des %>" name="campground[des]">
			<br>
		<input type="text" class="form-control" name="campground[price]" value="<%= campground.price %>" >
			<br>
		<button class="btn btn-primary btn-lg btn-block ">
			submit
		</button>
		
		<a href="/campgrounds/<%=campground._id %>">go back</a>
		</div>
	</div>
</form>
</div>




<%- include("../partials/footer") %>
