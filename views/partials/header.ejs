<html>
	<head>
		<title>yelpCamp</title>
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
		<link rel="stylesheet" href="/app.css">
	</head>
	
	<body>
		
		<nav class="navbar navbar-expand-lg navbar-light bg-light " >
			<div class="container-fluid">
				<a  href="/campgrounds" class="navbar-brand ">yelpCamp</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ddd" aria-						controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    				<span class="navbar-toggler-icon"></span>
  				</button>
				<div class="collapse navbar-collapse" id="ddd">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item">
							<a class="nav-link">Home</a>
						</li>
					</ul>
					<ul class="navbar-nav">
						<% if(!Currentuser){ %>
						
						<li class="nav-item">
							<a href="/login" class="nav-link">login</a>
						</li>
						<li class="nav-item">
							<a href="/register" class="nav-link">sing up</a>
						</li>
						<% }else{ %>
						<li class="nav-item">
							<a href="#" class="nav-link">welcome <%= Currentuser.username %></a>
						</li>
						<li class="nav-item">
							<a href="/logout" class="nav-link">logout</a>
						</li>
						<% } %>
						

						
					</ul>
				</div>
			</div>
		</nav>
		
		<div class="container">
		<% if(error && error.length > 0){ %>
		<div class="alert alert-danger" role="alert">
  			<%= error %>
		</div>
			
		<% } %>	
		<% if(success && success.length > 0){ %>	
		<div class="alert alert-success" role="alert">
  			<%= success %>
		</div>
		<% } %>	
		</div>